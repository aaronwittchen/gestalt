---
import '../styles/global.css'
---

<html lang="en" class="overflow-hidden h-full">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <title>Pricing - Gestalt</title>
  </head>
  <body class="antialiased h-full text-[var(--ctp-text)]">
    <div class="h-full flex flex-col">
      <nav class="flex items-center gap-4 px-5 py-2.5 bg-[var(--ctp-bg-panel)] subtle-border border-t-0 border-x-0">
        <a href="/" class="text-sm font-bold gradient-text">gestalt</a>
        <span class="text-[var(--ctp-surface1)]">/</span>
        <span class="text-xs text-[var(--ctp-subtext0)]">pricing</span>
      </nav>
      <main class="flex-1 overflow-y-auto p-8">
        <div class="max-w-3xl mx-auto prose-gestalt">
          <h1 class="text-2xl font-bold text-[var(--ctp-text)] mb-4">Pricing</h1>
          <p class="text-sm text-[var(--ctp-subtext0)]">Coming soon.</p>
        </div>
      </main>
    </div>
  </body>
</html>
