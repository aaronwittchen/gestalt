---
import { getCollection } from 'astro:content'
import '../../styles/global.css'

const docs = await getCollection('docs')
const sorted = docs.sort((a, b) => (a.data.order ?? 99) - (b.data.order ?? 99))
---

<html lang="en" class="overflow-hidden h-full">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <title>Docs - Gestalt</title>
  </head>
  <body class="antialiased h-full bg-[var(--ctp-crust)] text-[var(--ctp-text)]">
    <div class="h-full flex flex-col">
      <nav class="flex items-center gap-4 px-4 py-2 bg-[var(--ctp-mantle)] border-b border-[var(--ctp-surface0)]">
        <a href="/" class="text-sm font-bold text-[var(--ctp-mauve)]">gestalt</a>
        <span class="text-[var(--ctp-surface1)]">/</span>
        <span class="text-xs text-[var(--ctp-subtext0)]">docs</span>
      </nav>
      <div class="flex flex-1 overflow-hidden">
        <!-- Sidebar -->
        <aside class="w-56 shrink-0 p-4 border-r border-[var(--ctp-surface0)] bg-[var(--ctp-mantle)] overflow-y-auto">
          <ul class="flex flex-col gap-1">
            {sorted.map((doc) => (
              <li>
                <a
                  href={`/docs/${doc.id.replace(/\.mdx?$/, '')}`}
                  class="block rounded px-3 py-1.5 text-[11px] font-medium text-[var(--ctp-subtext0)] hover:text-[var(--ctp-text)] hover:bg-[var(--ctp-surface0)] transition-colors"
                >
                  {doc.data.title}
                </a>
              </li>
            ))}
          </ul>
        </aside>
        <!-- Content -->
        <main class="flex-1 overflow-y-auto p-8">
          <div class="max-w-3xl mx-auto prose-gestalt">
            <h1 class="text-2xl font-bold text-[var(--ctp-text)] mb-4">Documentation</h1>
            <p class="text-sm text-[var(--ctp-subtext0)]">Select a page from the sidebar.</p>
          </div>
        </main>
      </div>
    </div>
  </body>
</html>
