---
interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<div class="rounded-xl border border-neutral-200 bg-white shadow-xl overflow-hidden">
  <div class="flex items-center gap-2 border-b border-neutral-200 bg-neutral-50 px-4 py-3">
    <span class="h-3 w-3 rounded-full bg-red-400"></span>
    <span class="h-3 w-3 rounded-full bg-yellow-400"></span>
    <span class="h-3 w-3 rounded-full bg-green-400"></span>
    {title && <span class="ml-4 text-sm text-neutral-500">{title}</span>}
  </div>
  <div class="p-6">
    <slot />
  </div>
</div>
